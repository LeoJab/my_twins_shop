{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div id="fond_titre">
        <h1>Liste de tous les produits</h1>
    </div>

	<div id="page_produit_all">
		<div id="page_produit">
			<div id="nvx_produits">
                <h5>Nouveaux Produits</h5>
                <div id="gap">
                    {% for nouveauProduit in nouveauxProduits %}
                        <div class="nvx_produit">
                            <a href="{{ path('app_produit_detail', { produit: nouveauProduit.id }) }}">
                                <div>
                                    <div>
                                        <img src="{{ asset('/assets/image/') ~ nouveauProduit.photo }}" alt="photo produit">
                                    </div>
                                    <div>
                                        <p class="nvx_produit_lib">{{ nouveauProduit.libelle }}</p>
                                        <p class="nvx_produit_prix">{{ nouveauProduit.prix }} â‚¬</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
			<div>
				{% for produit in produits %}
					<div class="col-12 col-sm-6 col-md-4 col-xl-3 mb-3">
						<a href="{{ path('app_produit_detail', { produit: produit.id }) }}">
							<div class="">
								<img src="{{ asset('/assets/image/') ~ produit.photo}} " class="card-img-top"/>
								<div class="">
									<h5 class="card-title">{{produit.libelle}}, {{produit.description}}, {{produit.prix}}</h5>
								</div>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
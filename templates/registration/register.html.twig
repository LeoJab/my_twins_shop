{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<h4>Création de compte</h4>
	<div>
		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.nom) }}
		{{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.fone) }}
		{{ form_row(registrationForm.adresse_facturation) }}
        {{ form_row(registrationForm.adresse_livraison) }}
		{{ form_row(registrationForm.ville) }}
		{{ form_row(registrationForm.ref) }}
		{{ form_row(registrationForm.type) }}
		{{ form_row(registrationForm.siret) }}
		{{ form_row(registrationForm.coef) }}
		{{ form_row(registrationForm.cp) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword) }}


		{{ form_row(registrationForm.agreeTerms) }}

		<button type="submit" class="btn btn-primary mb-2">Créer mon compte</button>
		{{ form_end(registrationForm) }}
	</div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<h1>Panier</h1>

	<div class="col-12">

		{% for item in panier %}
			<div class="col-12">
				<h3>{{item.produit.libelle}}</h3>
				{{item.produit.description}}
				<div>Quantit√© :
					{{item.quantite}}</div>
				<div>
					{{item.produit.prix * item.quantite}}
				</div>

				<a href="/add/{{item.produit.id}}" class="btn btn-primary">Ajouter au panier</a>

				<a href="/supprimer/{{item.produit.id}}" class="btn btn-primary">Supprimer au panier</a>



				<a href="/remove/{{item.produit.id}}" class="btn btn-primary"> Retirer au panier</a>


				<a href="{{ path('app_commande') }}" class="btn btn-warning">Valider le panier</a>

			</div>


		{% else %}
			Votre panier est vide
		{% endfor %}
	</div>


{% endblock %}
